---
# handlers file for easy_envoy
- name: envoy_start
  systemd:
    name: envoy.service
    state: restarted
    enabled: True
- name: excalidraw_start
  systemd:
    name: excalidraw.service
    state: started
    enabled: True
- name: wastebin_start
  systemd:
    name: wastebin.service
    state: started
    enabled: True
- name: vscode_start
  systemd:
    name: vscode.service
    state: started
    enabled: True
- name: vncserver_start
  systemd:
    name: "vncserver@:2.service"
    state: started
    enabled: True
- name: start_grafana
  systemd:
    name: grafana-server.service
    state: started
    enabled: True
- name: start_loki
  systemd:
    state: started
    name: loki.service
    enabled: True
- name: start_prometheus
  systemd:
    state: started
    name: prometheus.service
    enabled: True
- name: start_node_exporter
  systemd:
    state: started
    name: node_exporter.service
    enabled: True
- name: Import service handlers
  import_tasks: handlers.yml

